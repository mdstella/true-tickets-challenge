  },
  "host": "localhost:9091",
  "basePath": "/",
  "paths": {
    "/metric/{key}": {
      "post": {
        "description": "Endpoint to add a new metric",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "schemes": ["http", "https"],
        "tags": ["metrics"],
        "operationId": "AddMetricRequest",
        "parameters": [
          {
            "type": "string",
